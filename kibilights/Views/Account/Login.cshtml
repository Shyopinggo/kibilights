@model KibiLights.ViewModels.LoginModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Login"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>@localizer["Login"]</h1>
<p><a asp-action="Register" asp-controller="Account">@localizer["Register"]</a></p>
<form class="my-3" asp-action="Login" asp-controller="Account" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group form-row">
        <div class="col-sm-3">
            <label asp-for="Email"></label>
        </div>
        <div class="col-sm-3">
            <input class="form-control-plaintext bg-secondary" type="text" asp-for="Email" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Email"></span>
            </div>
        </div>
    <div class="form-group form-row">
        <div class="col-sm-3">
            <label asp-for="Password"></label>
        </div>
        <div class="col-sm-3">
            <input class="form-control-plaintext bg-secondary" asp-for="Password" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="@localizer["Login"]" class="btn btn-primary" />
        </div>
</form>